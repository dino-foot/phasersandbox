{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "prettier/prettier": "off",
        "@typescript-eslint/semi": ["warn", "always"],
        "@typescript-eslint/explicit-function-return-type": ["warn", "always"],
        "@typescript-eslint/space-before-function-paren": ["warn", "always"],
        "@typescript-eslint/restrict-template-expressions": ["warn", "always"],
        "@typescript-eslint/strict-boolean-expressions": ["warn", "always"],
        "@typescript-eslint/ban-ts-comment": ["warn", "always"],
        "@typescript-eslint/restrict-plus-operands": ["warn", "always"],
        "max-len": ["warn", { "code": 120 }],
        "quotes": ["warn", "single"],
        "comma-style": ["warn", "last"],
        "semi": ["warn", "always"],
        "no-unused-vars": "warn"
    }
}
